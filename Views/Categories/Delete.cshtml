@model ProductManager.Models.Category

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Eliminar Categoría</h1>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left me-1"></i> Regresar a Lista
    </a>
</div>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirmación de Eliminación</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-danger" role="alert">
            <strong>¡Advertencia!</strong> Está a punto de eliminar permanentemente esta categoría. Esta acción no se puede deshacer.
        </div>

        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-3">Descripción:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.description)</dd>
                </dl>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i> Cancelar
            </a>
            <form asp-action="Delete" class="mb-0">
                <input type="hidden" asp-for="idCategory" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Confirmar Eliminación
                </button>
            </form>
        </div>
    </div>
</div>