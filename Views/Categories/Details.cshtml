@model ProductManager.Models.Category

@{
    ViewData["Title"] = "Detalles de Categoría";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="fas fa-tag me-2"></i>Detalles de Categoría</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Volver al Listado
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h4 class="mb-0">Información de la Categoría</h4>
    </div>
    <div class="card-body">
        <div class="info-item">
            <h5 class="info-label"><i class="fas fa-align-left me-2"></i>Descripción</h5>
            <p class="info-value">@Html.DisplayFor(model => model.description)</p>
        </div>

        <div class="d-flex justify-content-end mt-4 gap-3">
            <a asp-action="Edit" asp-route-id="@Model?.idCategory" class="btn btn-warning px-4">
                <i class="fas fa-edit me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="fas fa-list me-1"></i> Ver Todas
            </a>
        </div>
    </div>
</div>

<style>
    .info-item {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }
    .info-label {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
    }
    .info-value {
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 0;
    }
</style>