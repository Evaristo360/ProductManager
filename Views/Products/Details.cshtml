@model ProductManager.Models.Product

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="fas fa-info-circle me-2"></i>Detalles del Producto</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Volver al Listado
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h4 class="mb-0">Información General</h4>
    </div>
    <div class="card-body">
        <div class="row g-4">
            <!-- Columna Izquierda -->
            <div class="col-md-6">
                <div class="info-item">
                    <h5 class="info-label"><i class="fas fa-align-left me-2"></i>Descripción</h5>
                    <p class="info-value">@Html.DisplayFor(model => model.description)</p>
                </div>

                <div class="info-item">
                    <h5 class="info-label"><i class="fas fa-tag me-2"></i>Precio</h5>
                    <p class="info-value">@Html.DisplayFor(model => model.price)</p>
                </div>

                <div class="info-item">
                    <h5 class="info-label"><i class="fas fa-boxes me-2"></i>Stock</h5>
                    <p class="info-value">@Html.DisplayFor(model => model.stock)</p>
                </div>
            </div>

            <!-- Columna Derecha -->
            <div class="col-md-6">
                <div class="info-item">
                    <h5 class="info-label"><i class="fas fa-tags me-2"></i>Categoría</h5>
                    <p class="info-value">@Html.DisplayFor(model => model.idCategory)</p>
                </div>

                <div class="info-item">
                    <h5 class="info-label"><i class="fas fa-map-marker-alt me-2"></i>Ubicación</h5>
                    <p class="info-value">@Html.DisplayFor(model => model.idLocation)</p>
                </div>

                <div class="info-item">
                    <h5 class="info-label"><i class="fas fa-calendar-alt me-2"></i>Fecha de Creación</h5>
                    <p class="info-value">@Html.DisplayFor(model => model.createDate)</p>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-4 gap-3">
            <a asp-action="Edit" asp-route-id="@Model?.idProduct" class="btn btn-warning px-4">
                <i class="fas fa-edit me-1"></i> Editar Producto
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="fas fa-list me-1"></i> Ver Todos
            </a>
        </div>
    </div>
</div>

<style>
    .info-item {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }
    .info-label {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
    }
    .info-value {
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 0;
    }
</style>