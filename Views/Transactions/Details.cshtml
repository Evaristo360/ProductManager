@model ProductManager.Models.Transaction

@{
    ViewData["Title"] = "Detalles de Transacción";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="fas fa-exchange-alt me-2"></i>Detalles de Transacción</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Volver al Historial
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h4 class="mb-0">Información del Movimiento</h4>
    </div>
    <div class="card-body">
        <div class="row g-4">
            <!-- Columna Izquierda -->
            <div class="col-md-6">
                <div class="info-item">
                    <h5 class="info-label"><i class="fas fa-box me-2"></i>Producto</h5>
                    <p class="info-value">@Html.DisplayFor(model => model.idProduct)</p>
                </div>

                <div class="info-item">
                    <h5 class="info-label"><i class="fas fa-boxes me-2"></i>Cantidad</h5>
                    <p class="info-value">
                        <span class="badge @(Model.pieces > 0 ? "bg-success" : "bg-danger")">
                            @Html.DisplayFor(model => model.pieces)
                        </span>
                    </p>
                </div>
            </div>

            <!-- Columna Derecha -->
            <div class="col-md-6">
                <div class="info-item">
                    <h5 class="info-label"><i class="fas fa-exchange-alt me-2"></i>Tipo de Transacción</h5>
                    <p class="info-value">
                        <span class="badge @(Model.typeTransaction == TypeTransaction.Entrada ? "bg-info" : "bg-warning text-dark")">
                            @Html.DisplayFor(model => model.typeTransaction)
                        </span>
                    </p>
                </div>

                <div class="info-item">
                    <h5 class="info-label"><i class="fas fa-calendar-alt me-2"></i>Fecha</h5>
                    <p class="info-value">@Html.DisplayFor(model => model.createdDate)</p>
                </div>
            </div>
        </div>

        <!-- Comentarios (ancho completo) -->
        <div class="info-item mt-3">
            <h5 class="info-label"><i class="fas fa-comment me-2"></i>Comentarios</h5>
            <p class="info-value">@Html.DisplayFor(model => model.comments)</p>
        </div>

        <div class="d-flex justify-content-end mt-4 gap-3">
            <a asp-action="Edit" asp-route-id="@Model?.idTransaction" class="btn btn-warning px-4">
                <i class="fas fa-edit me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="fas fa-list me-1"></i> Ver Historial
            </a>
        </div>
    </div>
</div>

<style>
    .info-item {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }

    .info-label {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
    }

    .info-value {
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 0;
    }

    .badge {
        font-size: 0.9em;
        padding: 0.35em 0.65em;
    }
</style>