@model ProductManager.Models.Location

@{
    ViewData["Title"] = "Eliminar Ubicación";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Eliminar Ubicación</h1>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left me-1"></i> Regresar a Lista
    </a>
</div>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirmación de Eliminación</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-danger" role="alert">
            <strong>¡Advertencia!</strong> Está a punto de eliminar permanentemente esta ubicación. Esta acción no se puede deshacer.
        </div>

        <div class="row">
            <!-- Columna Izquierda -->
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Nombre:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.name)</dd>

                    <dt class="col-sm-4">Código:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.code)</dd>
                </dl>
            </div>

            <!-- Columna Derecha -->
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Descripción:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.description)</dd>

                    <dt class="col-sm-4">Estado:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.status ? "bg-success" : "bg-secondary")">
                            @(Model.status ? "Activo" : "Inactivo")
                        </span>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i> Cancelar
            </a>
            <form asp-action="Delete" class="mb-0">
                <input type="hidden" asp-for="idLocation" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Confirmar Eliminación
                </button>
            </form>
        </div>
    </div>
</div>