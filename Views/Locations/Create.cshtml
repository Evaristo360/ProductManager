@model ProductManager.Models.Location

@{
    ViewData["Title"] = "Nuevo Almacén";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="fas fa-warehouse me-2"></i>Nuevo Almacén</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Volver al Listado
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h4 class="mb-0">Información del Almacén</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="name" class="form-control" placeholder=" " required />
                        <label asp-for="name">Nombre</label>
                        <span asp-validation-for="name" class="invalid-feedback"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="code" class="form-control" placeholder=" " required />
                        <label asp-for="code">Código</label>
                        <span asp-validation-for="code" class="invalid-feedback"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="description" class="form-control" placeholder=" " />
                        <label asp-for="description">Descripción</label>
                        <span asp-validation-for="description" class="invalid-feedback"></span>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="status" checked>
                        <label class="form-check-label" asp-for="status">Activo</label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4 gap-3">
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-times me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-save me-1"></i> Registrar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Validación del lado del cliente
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}